services:
  audio-voice-service:
    build: .
    container_name: audio-voice-api
    ports:
      - "${PORT:-8005}:8005"
    volumes:
      - ./app:/app/app
      - ./uploads:/app/uploads
      - ./processed:/app/processed
      - ./temp:/app/temp
      - ./voice_profiles:/app/voice_profiles
      - ./models:/app/models
      # NOTA: ./logs é criado pelo container automaticamente
      # Se montar volume aqui e tiver erro de permissão, execute: chmod 777 logs
      - ./logs:/app/logs
    env_file:
      - .env
    environment:
      - PYTHONPATH=/app
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=compute,utility
      # Matplotlib cache directory fix
      - MPLCONFIGDIR=/app/temp/.matplotlib
      
      # ===== XTTS (Coqui TTS - NEW DEFAULT) =====
      - USE_XTTS=true
      - XTTS_DEVICE=cuda
      - XTTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
      - XTTS_TEMPERATURE=0.7
      - XTTS_FALLBACK_CPU=true
      
      # ===== F5-TTS (FALLBACK - Deprecated) =====
      # Para usar F5-TTS, set USE_XTTS=false e TTS_ENGINE=f5tts
      - TTS_ENGINE=f5tts
      - F5TTS_DEVICE=cuda
      - F5TTS_WHISPER_DEVICE=cpu
      # Otimizações GTX 1050 Ti (4GB VRAM)
      - F5TTS_NFE_STEP=16
      - F5TTS_USE_FP16=true
      - F5TTS_MAX_BATCH_SIZE=1
      # Modelo customizado pt-BR
      - F5TTS_CUSTOM_MODEL_DIR=/app/models/f5tts/pt-br
      - F5TTS_CUSTOM_MODEL_FILE=model_last.safetensors
    deploy:
      resources:
        limits:
          memory: 8G
        reservations:
          memory: 4G
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]
    restart: unless-stopped
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:8005/ || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 90s
    labels:
      - "com.example.service=audio-voice"
      - "com.example.version=1.0.0"

  celery-worker:
    build: .
    container_name: audio-voice-celery
    command: python -m celery -A app.celery_config worker --loglevel=info --concurrency=1 --pool=solo --queues=audio_voice_queue
    volumes:
      - ./app:/app/app
      - ./uploads:/app/uploads
      - ./processed:/app/processed
      - ./temp:/app/temp
      - ./voice_profiles:/app/voice_profiles
      - ./models:/app/models
      - ./logs:/app/logs
    env_file:
      - .env
    environment:
      - PYTHONPATH=/app
      - C_FORCE_ROOT=true
      - NVIDIA_VISIBLE_DEVICES=all
      - NVIDIA_DRIVER_CAPABILITIES=compute,utility
      # Matplotlib cache directory fix
      - MPLCONFIGDIR=/app/temp/.matplotlib
      
      # ===== XTTS (Coqui TTS - NEW DEFAULT) =====
      - USE_XTTS=true
      - XTTS_DEVICE=cuda
      - XTTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
      - XTTS_TEMPERATURE=0.7
      - XTTS_FALLBACK_CPU=true
      
      # ===== F5-TTS (FALLBACK - Deprecated) =====
      # Para usar F5-TTS, set USE_XTTS=false e TTS_ENGINE=f5tts
      - TTS_ENGINE=f5tts
      - F5TTS_DEVICE=cuda
      - F5TTS_WHISPER_DEVICE=cpu
      # Otimizações GTX 1050 Ti (4GB VRAM)
      - F5TTS_NFE_STEP=16
      - F5TTS_USE_FP16=true
      - F5TTS_MAX_BATCH_SIZE=1
      # Modelo customizado pt-BR
      - F5TTS_CUSTOM_MODEL_DIR=/app/models/f5tts/pt-br
      - F5TTS_CUSTOM_MODEL_FILE=model_last.safetensors
    deploy:
      resources:
        limits:
          memory: 8G
        reservations:
          memory: 4G
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]
    restart: unless-stopped
    depends_on:
      audio-voice-service:
        condition: service_healthy
    healthcheck:
      test: ["CMD-SHELL", "python -m celery -A app.celery_config inspect ping || exit 1"]
      interval: 30s
      timeout: 30s
      retries: 5
      start_period: 60s
    labels:
      - "com.example.service=audio-voice-worker"
      - "com.example.version=1.0.0"
