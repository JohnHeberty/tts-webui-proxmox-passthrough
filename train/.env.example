# F5-TTS Training Configuration
EPOCHS=1000
BATCH_SIZE=2
BATCH_SIZE_TYPE=sample
LEARNING_RATE=0.0001
GRAD_ACCUMULATION_STEPS=8

# Early Stopping (para quando não evoluir mais)
EARLY_STOP_PATIENCE=1000
EARLY_STOP_MIN_DELTA=0.001

# Checkpoint Management
SAVE_PER_UPDATES=100
LAST_PER_UPDATES=50
KEEP_LAST_N_CHECKPOINTS=10
LOG_SAMPLES_PER_UPDATES=100

# Dataset (manter dataset existente, mas treinar com vocab multilingual do modelo)
DATASET_NAME=f5_dataset
DATASET_PATH=train/data/f5_dataset

# Model (FINE-TUNING com checkpoint compatível)
# ✅ Usando model_last.pt que está no formato correto do F5-TTS
BASE_MODEL=firstpixel/F5-TTS-pt-br
PRETRAIN_MODEL_PATH=train/pretrained/F5-TTS-pt-br/pt-br/model_200000_fixed.pt
AUTO_DOWNLOAD_PRETRAINED=true
USE_FINETUNE_FLAG=true

# Paths
OUTPUT_DIR=train/output/ptbr_finetuned
TENSORBOARD_DIR=train/runs
LOG_DIR=train/logs

# Hardware
DEVICE=cuda
NUM_WORKERS=2
MIXED_PRECISION=fp16
MAX_SAMPLES=32

# Logging
LOGGER=tensorboard
LOG_SAMPLES=true
LOG_SAMPLES_PER_EPOCHS=1

# Advanced
SEED=666
NUM_WARMUP_UPDATES=200
MAX_GRAD_NORM=1.0

# Experiment Name
EXP_NAME=F5TTS_Base

# Model Download
MODEL_FILENAME=pt-br/model_200000.pt

# F5-TTS Paths (opcional - apenas se precisar customizar)
# F5TTS_BASE_DIR=/root/.local/lib/python3.11
# F5TTS_CKPTS_DIR=/root/.local/lib/python3.11/ckpts
# LOCAL_PRETRAINED_PATH=models/f5tts/pt-br/model_last.pt

# TensorBoard
TENSORBOARD_PORT=6006

# Data Preparation Paths
RAW_DATA_DIR=train/data/raw
PROCESSED_DATA_DIR=train/data/processed
VIDEOS_CSV=train/data/videos.csv
CONFIG_DIR=train/config
