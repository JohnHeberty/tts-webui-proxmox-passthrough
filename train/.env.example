# ========================================
# F5-TTS TRAINING CONFIGURATION
# ========================================
# Copie este arquivo para .env e ajuste os valores

# ========================================
# TRAINING PARAMETERS
# ========================================
EPOCHS=1000
BATCH_SIZE=4
LEARNING_RATE=0.0001
GRAD_ACCUMULATION_STEPS=4

# ========================================
# EARLY STOPPING
# ========================================
# Número de epochs sem melhora antes de parar (0 = desabilitado)
EARLY_STOP_PATIENCE=5
# Melhora mínima considerada significativa (0.1%)
EARLY_STOP_MIN_DELTA=0.001

# ========================================
# CHECKPOINT MANAGEMENT
# ========================================
# Salvar checkpoint completo a cada N updates
SAVE_PER_UPDATES=500
# Salvar model_last.pt a cada N updates (mais frequente)
LAST_PER_UPDATES=50
# Manter apenas N últimos checkpoints
KEEP_LAST_N_CHECKPOINTS=10

# ========================================
# DATASET
# ========================================
DATASET_NAME=ptbr_youtube_custom
DATASET_PATH=train/data/f5_dataset

# ========================================
# MODEL
# ========================================
BASE_MODEL=firstpixel/F5-TTS-pt-br
CHECKPOINT_PATH=./models/f5tts/pt-br/model_last.safetensors
VOCAB_FILE=./models/f5tts/pt-br/vocab.txt

# ========================================
# PATHS (sempre dentro de train/)
# ========================================
OUTPUT_DIR=train/output/ptbr_finetuned
TENSORBOARD_DIR=train/runs
LOG_DIR=train/logs

# ========================================
# HARDWARE
# ========================================
DEVICE=cuda
NUM_WORKERS=4
MIXED_PRECISION=fp16

# ========================================
# LOGGING
# ========================================
LOGGER=tensorboard
LOG_SAMPLES=true
LOG_SAMPLES_PER_EPOCHS=1

# ========================================
# ADVANCED
# ========================================
# Seed para reprodutibilidade
SEED=666
# Warmup steps
NUM_WARMUP_UPDATES=200
