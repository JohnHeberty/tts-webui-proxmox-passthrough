# F5-TTS Training Configuration
EPOCHS=1000
BATCH_SIZE=4
LEARNING_RATE=0.0001
GRAD_ACCUMULATION_STEPS=4

# Early Stopping (para quando n√£o evoluir mais)
EARLY_STOP_PATIENCE=1000
EARLY_STOP_MIN_DELTA=0.001

# Checkpoint Management
SAVE_PER_UPDATES=1000
LAST_PER_UPDATES=50
KEEP_LAST_N_CHECKPOINTS=10
LOG_SAMPLES_PER_UPDATES=250

# Dataset (manter dataset existente, mas treinar com vocab multilingual do modelo)
DATASET_NAME=f5_dataset
DATASET_PATH=train/data/f5_dataset

# Model (fine-tuning do modelo firstpixel/F5-TTS-pt-br)
BASE_MODEL=firstpixel/F5-TTS-pt-br
PRETRAIN_MODEL_PATH=train/pretrained/F5-TTS-pt-br/model_1200000.pt
AUTO_DOWNLOAD_PRETRAINED=true

# Paths
OUTPUT_DIR=train/output/ptbr_finetuned
TENSORBOARD_DIR=train/runs
LOG_DIR=train/logs

# Hardware
DEVICE=cuda
NUM_WORKERS=4
MIXED_PRECISION=fp16

# Logging
LOGGER=tensorboard
LOG_SAMPLES=true
LOG_SAMPLES_PER_EPOCHS=1

# Advanced
SEED=666
NUM_WARMUP_UPDATES=200
